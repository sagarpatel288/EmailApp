<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:context=".login.MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="@dimen/view_space_10"
            android:paddingLeft="@dimen/view_space_10"
            android:paddingEnd="@dimen/view_space_10"
            android:paddingRight="@dimen/view_space_10">

            <WebView
                android:id="@+id/web_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/mbtn_outlook_email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/view_space_12"
                    android:layout_marginLeft="@dimen/view_space_12"
                    android:layout_marginTop="@dimen/view_space_20"
                    android:layout_marginEnd="@dimen/view_space_12"
                    android:layout_marginRight="@dimen/view_space_12"
                    android:gravity="center"
                    android:paddingStart="@dimen/view_space_20"
                    android:paddingLeft="@dimen/view_space_20"
                    android:paddingTop="@dimen/view_space_20"
                    android:paddingEnd="@dimen/view_space_20"
                    android:paddingRight="@dimen/view_space_20"
                    android:paddingBottom="@dimen/view_space_20"
                    android:text="@string/label_outlook_email"
                    android:textColor="@color/colorWhite"
                    app:layout_constraintEnd_toStartOf="@+id/mbtn_compose"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/mbtn_compose"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/view_space_12"
                    android:layout_marginLeft="@dimen/view_space_12"
                    android:layout_marginEnd="@dimen/view_space_12"
                    android:layout_marginRight="@dimen/view_space_12"
                    android:gravity="center"
                    android:paddingStart="@dimen/view_space_20"
                    android:paddingLeft="@dimen/view_space_20"
                    android:paddingTop="@dimen/view_space_20"
                    android:paddingEnd="@dimen/view_space_20"
                    android:paddingRight="@dimen/view_space_20"
                    android:paddingBottom="@dimen/view_space_20"
                    android:text="Compose"
                    android:textColor="@color/colorWhite"
                    app:layout_constraintBottom_toBottomOf="@+id/mbtn_outlook_email"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/mbtn_outlook_email"
                    app:layout_constraintTop_toTopOf="@+id/mbtn_outlook_email" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/mbtn_outlook_email"
                    tools:itemCount="20"
                    tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_email"
                    tools:spanCount="2">

                </androidx.recyclerview.widget.RecyclerView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>