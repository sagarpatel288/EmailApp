<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.livemymail.android.mailboxapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.livemymail.android.mailboxapp.activities.MainActivity"
            android:theme="@style/AppTheme.Launcher">
        </activity>
        <activity
            android:name="com.livemymail.android.mailboxapp.activities.InboxActivity"
            android:theme="@style/AppTheme.Launcher" />
        <activity android:name="com.livemymail.android.mailboxapp.activities.EmailActivity" />
        <activity android:name="com.livemymail.android.mailboxapp.activities.ComposeActivity"></activity>
    </application>

</manifest>